<Configuration status="warn" packages="com.kdgregory.log4j2">

    <Appenders>
        <KinesisAppender name="test">
            <PatternLayout pattern="%d [%t] %-5p %c - %m%n" />
            <streamName>AppenderIntegrationTest-testMultipleThreadsSingleAppender</streamName>
            <partitionKey>test</partitionKey>
            <batchDelay>500</batchDelay>
            <autoCreate>true</autoCreate>
            <shardCount>2</shardCount>
        </KinesisAppender>
    </Appenders>

    <Loggers>
        <Root level="off">
        </Root>

        <Logger name="TestLogger" level="debug" additivity="false">
            <AppenderRef ref="test" />
        </Logger>
    </Loggers>

</Configuration>
