{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "CloudFormation template to create all resources for logging example",
    "Parameters": {
        "FailedRecordsBucket": {
            "Type": "String",
            "Description": "The bucket where failed log records will be stored"
        },
        "FailedRecordsPrefix": {
            "Type": "String",
            "Default": "log-upload-failures",
            "Description": "Prefix within the bucket for failed log record storage"
        }
    },
    "Resources": {
        "CloudWatchLogGroup": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": "AppenderExample",
                "RetentionInDays": 1
            }
        },
        "KinesisStream": {
            "Type": "AWS::Kinesis::Stream",
            "Properties": {
                "Name": "AppenderExample",
                "ShardCount": 1
            }
        },
        "KinesisReaderPolicy": {
            "Type": "AWS::IAM::ManagedPolicy",
            "Properties": {
                "ManagedPolicyName": "AppenderExampleKinesisReader",
                "Description": "Provides read-only access to the example stream",
                "PolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": {
                        "Effect": "Allow",
                        "Action": [
                            "kinesis:DescribeStream",
                            "kinesis:GetShardIterator",
                            "kinesis:GetRecords"
                        ],
                        "Resource": { "Fn::Sub": "arn:aws:kinesis:${AWS::Region}:${AWS::AccountId}:stream/AppenderExample" }
                    }
                }
            }
        },
        "ElasticSearchDomain": {
            "Type": "AWS::Elasticsearch::Domain",
            "Properties": {
                "DomainName": "logging-example",
                "ElasticsearchVersion": "5.5",
                "ElasticsearchClusterConfig": {
                    "InstanceType": "m4.large.elasticsearch",
                    "InstanceCount": 1,
                    "DedicatedMasterEnabled": false,
                    "ZoneAwarenessEnabled": false
                },
                "EBSOptions": {
                    "EBSEnabled": true,
                    "VolumeType": "gp2",
                    "VolumeSize": 16
                },
                "SnapshotOptions": {
                    "AutomatedSnapshotStartHour": 8
                },
                "AdvancedOptions": {
                    "rest.action.multi.allow_explicit_index": "true"
                },
                "AccessPolicies": {
                    "Version": "2012-10-17",
                    "Statement": {
                        "Effect": "Allow",
                        "Principal": {
                            "AWS": "*"
                        },
                        "Action": "es:*",
                        "Resource": { "Fn::Sub": "arn:aws:es:${AWS::Region}:${AWS::AccountId}:domain/logging-example/*" }
                    }
                }
            }
        },
        "Firehose": {
            "Type": "AWS::KinesisFirehose::DeliveryStream",
            "DependsOn": [
                "KinesisStream",
                "ElasticSearchDomain"
            ],
            "Properties": {
                "DeliveryStreamName": "LoggingFirehose",
                "DeliveryStreamType": "KinesisStreamAsSource",
                "KinesisStreamSourceConfiguration": {
                    "KinesisStreamARN": {"Fn::GetAtt": ["KinesisStream","Arn"]},
                    "RoleARN": {"Fn::GetAtt": ["FirehoseDeliveryRole", "Arn"]}
                },
                "ElasticsearchDestinationConfiguration": {
                    "DomainARN": {"Fn::GetAtt": ["ElasticSearchDomain","DomainArn"]},
                    "IndexName": "logstash",
                    "IndexRotationPeriod": "OneDay",
                    "RoleARN": {"Fn::GetAtt": ["FirehoseDeliveryRole", "Arn"]},
                    "BufferingHints": {
                        "IntervalInSeconds": 60,
                        "SizeInMBs": 5
                    },
                    "TypeName": "Log4J",
                    "RetryOptions": {
                        "DurationInSeconds": 300
                    },
                    "CloudWatchLoggingOptions": {
                        "Enabled": true,
                        "LogGroupName" : {"Ref": "FirehoseErrorLog"},
                        "LogStreamName" : "ES_Errors"
                    },
                    "S3BackupMode": "FailedDocumentsOnly",
                    "S3Configuration": {
                        "BucketARN": {"Fn::Sub": "arn:aws:s3:::${FailedRecordsBucket}"},
                        "RoleARN": {"Fn::GetAtt": ["FirehoseDeliveryRole", "Arn"]},
                        "Prefix": {"Ref": "FailedRecordsPrefix"},
                        "BufferingHints": {
                            "IntervalInSeconds": 60,
                            "SizeInMBs": 5
                        },
                        "CompressionFormat": "UNCOMPRESSED",
                        "CloudWatchLoggingOptions": {
                            "Enabled": true,
                            "LogGroupName" : {"Ref": "FirehoseErrorLog"},
                            "LogStreamName" : "S3_Errors"
                        }
                    }
                }
            }
        },
        "FirehoseErrorLog": {
            "Type": "AWS::Logs::LogGroup",
            "Properties": {
                "LogGroupName": "FirehoseErrors",
                "RetentionInDays": 1
            }
        },
        "FirehoseDeliveryRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "RoleName": "Logging_Example_Firehose_Role",
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": {
                        "Effect": "Allow",
                        "Principal": {
                            "Service": "firehose.amazonaws.com"
                        },
                        "Action": "sts:AssumeRole",
                        "Condition": {
                            "StringEquals": {
                                "sts:ExternalId": {
                                    "Ref": "AWS::AccountId"
                                }
                            }
                        }
                    }
                },
                "ManagedPolicyArns": [
                    { "Ref": "KinesisReaderPolicy" }
                ],
                "Policies": [
                    {
                        "PolicyName": "s3Upload",
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "s3:AbortMultipartUpload",
                                        "s3:GetBucketLocation",
                                        "s3:GetObject",
                                        "s3:ListBucket",
                                        "s3:ListBucketMultipartUploads",
                                        "s3:PutObject"
                                    ],
                                    "Resource": [
                                        { "Fn::Sub": "arn:aws:s3:::${FailedRecordsBucket}" },
                                        { "Fn::Sub": "arn:aws:s3:::${FailedRecordsBucket}/*" }
                                    ]
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "es:DescribeElasticsearchDomain",
                                        "es:DescribeElasticsearchDomains",
                                        "es:DescribeElasticsearchDomainConfig",
                                        "es:ESHttpGet",
                                        "es:ESHttpPost",
                                        "es:ESHttpPut"
                                    ],
                                    "Resource": [
                                        { "Fn::Sub": "arn:aws:es:${AWS::Region}:${AWS::AccountId}:domain/logging-example" },
                                        { "Fn::Sub": "arn:aws:es:${AWS::Region}:${AWS::AccountId}:domain/logging-example/*" }
                                    ]
                                },
                                {
                                    "Effect": "Allow",
                                    "Action": [
                                        "logs:CreateLogGroup",
                                        "logs:CreateLogStream",
                                        "logs:PutLogEvents"
                                    ],
                                    "Resource": [
                                        { "Fn::GetAtt": ["FirehoseErrorLog", "Arn"] }
                                    ]
                                }
                            ]
                        }
                    }
                ]
            }
        }
    }
}
